{
  "name": "sample",
  "version": "0.0.0",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "all": "run-p server watch:css",
    "css:scss": "node-sass src/assets/scss/style.scss -o src/assets/css --source-map src/assets/css",
    "css:postcss": "postcss src/assets/css/style.css -o src/assets/css/style.min.css",
    "watch:css": "watch \"run-s css:scss css:postcss\" ./src/assets/scss",
    "server": "browser-sync start --server --files='src/assets/*.html, src/assets/css/*.css, src/assets/js/*.js' --startPath='src/assets/'"
  },
  "author": "haruka",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "cssnano": "^4.1.10",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "node-sass-globbing": "0.0.23"
  },
  "keywords": [],
  "description": "",
  "browserslist": [
    "last 2 version",
    "> 5%",
    "ie >= 9"
  ]
}
